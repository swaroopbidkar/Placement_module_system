<style>
    body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }
        header {
            background-color: #0a4d7c;
            color: #fff;
            padding: 20px 0;
        }
        header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo {
            margin: 0;
            font-size: 24px;
        }
        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            text-align: right;
        }

        nav ul li {
            display: inline;
            margin-left: 20px;
        }

        nav ul li a {
            color: #fff;
            text-decoration: none;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 20px;
            background-color: #0a4d7c;
            color: #fff;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #555;
        }
        .dropdown-menu a {
            color: #000;
            text-decoration: none;
        }

        .dropdown-menu a:hover {
            background-color: #087aae; 
        }
.form-container {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.form-wrapper {
  width: 350px;
  background-color: #fff;
  box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
  border-radius: 10px;
  padding: 20px 30px;
  text-align: center;
}

.form-group {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 15px;
}

.form-group label {
  flex: 1;
}

.form-group select, .form-group input {
  border-radius: 20px;
  border: 1px solid #c0c0c0;
  outline: 0 !important;
  box-sizing: border-box;
  padding: 12px 15px;
  width: 100%; /* Add this to make the select tag full width */
}

.form-group select {
  appearance: none; /* Add this to remove the default select arrow */
  background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" fill="%23888"><polygon points="0,0 100,0 50,50"/></svg>'); /* Add this to add a custom select arrow */
  background-position: right 15px top 50%;
  background-repeat: no-repeat;
  padding-right: 30px; /* Add this to make space for the custom select arrow */
}

.form-btn {
  width: 100%;
  padding: 10px 15px;
  font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande", "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
  border-radius: 20px;
  border: 0 !important;
  outline: 0 !important;
  background: #0a4d7c;
  color: white;
  cursor: pointer;
  box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
}
button:hover {
            background-color: #0056b3;
        }
.form-btn:active {
  box-shadow: none;
}

.sign-up-label {
  margin: 0;
  font-size: 10px;
  color: #747474;
  font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
        "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
}

.sign-up-link {
  margin-left: 1px;
  font-size: 11px;
  text-decoration: underline;
  text-decoration-color: teal;
  color: teal;
  cursor: pointer;
  font-weight: 800;
  font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
        "Lucida Sans Unicode", Geneva, Verdana, sans-serif;
}
        
.social-login-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}
    .social-login-buttons a {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 40px;
            height: 40px;
            background-color: #f4f4f4;
            border-radius: 50%;
            border: 1px solid #ccc;
            color: #555;
            text-decoration: none;
            font-size: 20px;
            transition: background-color 0.3s, color 0.3s, border-color 0.3s;
        }
       .social-login-buttons a.google:hover {
            background-color: #db4437;
            color: #fff;
            border-color: #db4437;
        }
        /* .social-login-buttons a.linkedin:hover {
            background-color: #0077b5;
            color: #fff;
            border-color: #0077b5;
        } */

        .social-login-buttons a.facebook:hover {
            background-color: #3b5998;
            color: #fff;
            border-color: #3b5998;
        }

        .social-login-buttons a.twitter:hover {
            background-color: #1da1f2;
            color: #fff;
            border-color: #1da1f2;
        }
        footer {
            background-color: #f4f4f4;
            color: #888;
            text-align: center;
            padding: 10px;
            font-size: 12px;
            position: relative;
            width: 100%;
        }
</style>
<body>
    <header>
        <nav>
            <nav class="navbar navbar-expand-lg ">
                <div class="container">
                    <a class="navbar-brand" href="/" style="color:#fff">NWC Placement Module</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/" style="color:#fff">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" style="color:#fff" id="navbarDropdownMenuLink" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    Portal
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="dropdown-item" href="/student/login">Student Portal</a></li>
                                    <li><a class="dropdown-item" href="/teacher/login">Teacher Portal</a></li>
                                    <li><a class="dropdown-item" href="/company/login">Company Portal</a></li>
                                </ul>
                            </li>
                            <!-- add the redirection for contact and about -->
                            <li class="nav-item">
                                <a class="nav-link" href="/#contact" style="color: #fff;">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/about" style="color:#fff">About</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </nav>
    </header>
    <div class="form-container">
        <div class="form-wrapper">
            <form class="form" method="POST" action="/login">
                <div class="form-group">
                    <label><i class="fa fa-user" aria-hidden="true"></i></label>
                    <select name="role" placeholder="Role" required>
                        <option value="student">Student</option>
                        <option value="teacher">Teacher</option>
                        <option value="company">Company</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="email"><i class="fa fa-envelope" aria-hidden="true"></i></label>
                    <input type="email" id="email" name="email" required placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="password"><i class="fa fa-lock" aria-hidden="true"></i></label>
                    <input type="password" id="password" name="password" required placeholder="Enter your password">
                </div>
                <br>
                <button class="form-btn">Log in</button>
            </form>
            <p><a href="/forgot-password">Forgot Password?</a></p>
            <div class="social-login-buttons">
                <a href="https://nowrosjeewadia.mespune.org/" class="google"><i class="fab fa-google"></i></a>
                <a href="https://www.facebook.com/people/Nowrosjee-Wadia-College-Official/100090413746025/" class="facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="https://x.com/i/flow/login?redirect_after_login=%2Fnwcpuneofficial" class="twitter"><i class="fab fa-twitter"></i></a>
            </div>
        </div>
    </div>
    <footer>
        <%- include('footer.ejs') %>
    </footer>
</body>
</html>
