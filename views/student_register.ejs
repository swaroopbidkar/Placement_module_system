    <%- include('footer.ejs') %>

    <script>
        function validateForm() {

            var email = document.getElementById('email').value;
            var emailPattern = /^[a-zA-Z0-9\.]+@[a-zA-Z0-9]+\.[a-zA-Z]+$/;
            if (!emailPattern.test(email)) {
                alert('Please enter a valid email address.');
                return false;
            }
        }

        const urlParams = new URLSearchParams(window.location.search);
        const success = urlParams.get('success');
        if (success === 'false') {
            alert('Email Already Exists');
        }
        else if (success === 'true') {
            alert('Registered Successfully');
        }
    </script>
    <script>
        var input = document.querySelector('input[name=skills]');
        var tagify = new Tagify(input);
    
        // Convert Tagify data to comma-separated string before form submission
        input.addEventListener('change', function() {
            var skillsArray = tagify.value.map(tag => tag.value);
            input.value = skillsArray.join(',');
        });
    </script>
</body>

</html>