    <title>Teacher Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        header {
            background-color: #0a4d7c;
            color: #fff;
            padding: 20px 0;
        }

        header .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            margin: 0;
            font-size: 24px;
        }

        nav ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            text-align: right;
        }

        nav ul li {
            display: inline;
            margin-left: 20px;
        }

        nav ul li a {
            color: #ff0000;
            text-decoration: none;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 20px;
            background-color: #0a4d7c;
            color: #fff;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #555;
        }

        .dropdown-menu a {
            color: #000;
            text-decoration: none;
        }

        .dropdown-menu a:hover {
            background-color: #087aae;
        }

        .hero {
            background-color: #f4f4f4;
            padding: 100px 0;
            text-align: center;
        }

        .hero h1 {
            margin: 0;
            font-size: 36px;
        }

        .hero p {
            margin: 20px 0;
            font-size: 18px;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 20px;
            background-color: #0a4d7c;
            color: #fff;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn:hover {
            background-color: #555;
        }

        .container-main {
            flex: 1;
            display: flex;
            border-radius: 8px;
            margin: 1% auto;
            padding: 1%;
            width: 90%;
            max-width: 1200px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            background-color: #fff;
            flex-wrap: wrap;
        }

        .left,
        .right {
            flex: 1;
            padding: 40px;
            box-sizing: border-box;
        }

        .left {
            background-color: #f4f9fa;
            color: #0e0d0d;
        }

        .left form {
            display: flex;
            flex-direction: column;
        }

        .left label {
            margin-bottom: 10px;
            font-size: 14px;
        }

        .left input[type="email"],
        .left input[type="password"] {
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 4px;
            border: 1px solid #ccc;
            font-size: 14px;
        }

        .left button {
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .left button:hover {
            background-color: #0056b3;
        }

        .or-separator {
            display: flex;
            align-items: center;
            text-align: center;
            margin: 20px 0;
        }

        .or-separator::before,
        .or-separator::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid #ccc;
        }

        .or-separator:not(:empty)::before {
            margin-right: 0.25em;
        }

        .or-separator:not(:empty)::after {
            margin-left: 0.25em;
        }

        .social-login-buttons {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .social-login-buttons a {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 40px;
            height: 40px;
            background-color: #f4f4f4;
            border-radius: 50%;
            border: 1px solid #ccc;
            color: #555;
            text-decoration: none;
            font-size: 20px;
            transition: background-color 0.3s, color 0.3s, border-color 0.3s;
        }

        .social-login-buttons a.google:hover {
            background-color: #db4437;
            color: #fff;
            border-color: #db4437;
        }

        .social-login-buttons a.linkedin:hover {
            background-color: #0077b5;
            color: #fff;
            border-color: #0077b5;
        }

        .social-login-buttons a.facebook:hover {
            background-color: #3b5998;
            color: #fff;
            border-color: #3b5998;
        }

        .social-login-buttons a.twitter:hover {
            background-color: #1da1f2;
            color: #fff;
            border-color: #1da1f2;
        }

        .right {
            background-color: white;
            color: #333;
            display: flex;
            align-items: center;
           justify-content: center;
        }

        .right h2 {
            margin-bottom: 20px;
        }

        .right p,
        .right ul {
            font-size: 14px;
            margin-bottom: 20px;
        }

        footer {
            background-color: #f4f4f4;
            color: #888;
            text-align: center;
            padding: 10px;
            font-size: 12px;
            position: relative;
            width: 100%;
        }

        @media (max-width: 768px) {
            .container-main {
                flex-direction: column;
                width: 90%;
            }

            header .container {
                flex-direction: column;
                text-align: center;
            }

            nav ul {
                justify-content: center;
                flex-wrap: wrap;
            }

            .left,
            .right {
                padding: 20px;
            }

            .social-login-buttons {
                flex-direction: column;
                gap: 10px;
            }
        }

        @media (max-width: 480px) {
            h1 {
                font-size: 1.2rem;
            }

            .container-main {
                width: 100%;
            }

            .left,
            .right {
                padding: 10px;
            }

            .social-login-buttons a {
                width: 100%;
                height: 50px;
            }

            .social-login-buttons {
                flex-direction: column;
                gap: 10px;
            }
        }
        .rightside .text{
    position: relative;
    color: #4070F4;
    font-size: 25px;
    font-weight: 600;
}
.rightside .text.first-text{
    color: #000;
    font-size: 25px;
}
.text.sec-text:before{
    content: "";
    position: absolute;
    font-size: 25px;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background-color: #fff;
    border-left: 2px solid #4070F4;
    animation: animate 4s steps(8) infinite;
}
@keyframes animate{
    40%, 60%{
        left: calc(100% + 4px);
    }
    100%{
        left: 0%;
    }
}
    </style>
</head>

<body>
